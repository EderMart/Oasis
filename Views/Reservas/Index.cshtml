@model List<Reserva>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">

    <div class="card-header">
        
        <h5>
            <i class="fas fa-table me-1"></i>
            Lista de Reservas
        </h5>

    </div>

    <div class="card-body">

        <div>
            <a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Reservas" >Crear Reserva</a>
        </div>

        <br />

        <form>

            <div class="col-md-2">
                <input type="text" class="form-control" placeholder="Buscar">
            </div>

        </form>

        <br />

        <table class="table table-striped table-bordered table-hover">

            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Tipo de Documento</th>
                    <th>Documento</th>
                    <th>Fecha Reserva</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Total</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>

                @foreach (var reserva in Model)
                {
                    <tr>
                        <td>@reserva.DocumentoClienteNavigation.Nombre</td>
                        <td>@reserva.DocumentoClienteNavigation.CodigoTipoDocNavigation.NombreTipoDoc</td>
                        <td>@reserva.DocumentoCliente</td>
                        <td>@reserva.Fecha</td>
                        <td>@reserva.FechaInicio</td>
                        <td>@reserva.FechaFinalizacion</td>
                        <td>@reserva.Total</td>
                        <td>@reserva.CodigoEstadoResNavigation.NombreEstadoRes</td>

                    </tr>
                }

            </tbody>

        </table>

    </div>

</div>