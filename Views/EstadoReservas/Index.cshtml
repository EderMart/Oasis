@model IEnumerable<Oasis.Models.EstadoReserva>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">

    <div class="card-header">

        <h5>
            <i class="fas fa-table me-1"></i>
            Lista Estado de Reserva
        </h5>

    </div>

    <div class="card-body">

        <div>
            <a asp-action="Create" class="btn btn-success btn-sm">Crear Estado</a>
        </div>

        <br />

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreEstadoRes)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreEstadoRes)
                        </td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.CodigoEstadoRes">Editar</a> |
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.CodigoEstadoRes">Detalle</a> |
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CodigoEstadoRes">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>