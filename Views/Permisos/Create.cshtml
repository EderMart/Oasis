@model Oasis.Models.Permiso

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Permiso</h1>


<hr />
<form asp-action="Create">
   <div class="row">
       <div class="col-md-4">
 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombrePermiso" class="control-label"></label>
                <input asp-for="NombrePermiso" class="form-control" />
                <span asp-validation-for="NombrePermiso" class="text-danger"></span>
            </div>

       </div>
   </div>

   <br />

    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-dark">Atrás</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
