@model IEnumerable<Oasis.Models.Servicio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">

    <div class="card-header">

        <h5>
            <i class="fas fa-table me-1"></i>
            Lista de Servicios
        </h5>

    </div>

    <div class="card-body">

        <div>
            <a class="btn btn-success btn-sm" asp-action="Create">Crear Servicio</a>
        </div>

        <br />

        <form>

            <div class="col-md-2">
                <input type="text" class="form-control" placeholder="Buscar">
            </div>

        </form>

        <br />

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreServicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EstadoServicio)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreServicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstadoServicio)
                        </td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.CodigoServicio">Editar</a> |
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.CodigoServicio">Detalle</a> |
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CodigoServicio">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>

</div>