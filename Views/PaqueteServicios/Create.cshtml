@model Oasis.Models.PaqueteServicio

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear PaqueteServicio</h1>


<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoPaquete" class="control-label"></label>
                <input asp-for="CodigoPaquete" class ="form-control" asp-items="ViewBag.CodigoPaquete" />
            </div>

            <br />

            <div class="form-group">
                <label asp-for="CodigoServicio" class="control-label"></label>
                <input asp-for="CodigoServicio" class ="form-control" asp-items="ViewBag.CodigoServicio" />
            </div>

            <br />

            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" placeholder="$" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            
        </div>
    </div>

    <br />

    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-dark">Atrás</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
