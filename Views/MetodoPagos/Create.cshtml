@model Oasis.Models.MetodoPago

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Método de Pago</h1>


<hr />
<form asp-action="Create">
   <div class="row">
       <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreMetodoPago" class="control-label"></label>
                <input asp-for="NombreMetodoPago" class="form-control" />
                <span asp-validation-for="NombreMetodoPago" class="text-danger"></span>
            </div>
       </div>
   </div>
   <br />

    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-dark">Atrás</a>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
