@model Oasis.Models.TipoServicio

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Tipo de Servicio</h1>

<hr />
<form asp-action="Create">
   <div class="row">
       <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreTipoServ" class="control-label"></label>
                <input asp-for="NombreTipoServ" class="form-control" />
                <span asp-validation-for="NombreTipoServ" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />  |
                <a asp-action="Index" class="btn btn-dark">Atrás</a>
            </div>
       </div>
   </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
