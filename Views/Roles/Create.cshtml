@model Oasis.Models.Role

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Rol</h1>


<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreRol" class="control-label"></label>
                <input asp-for="NombreRol" class="form-control" />
                <span asp-validation-for="NombreRol" class="text-danger"></span>
            </div>
            
            <br />

            <div class="form-group">
                <label asp-for="EstadoRol" class="control-label"></label>
                <select asp-for="EstadoRol" class="form-select form-select-sm" aria-label=".form-select-sm example">
                    <option selected disabled>  Selecciona  </option>
                    <option selected>  Activo  </option>
                    <option selected>  Inactivo  </option>
                </select>
                <span asp-validation-for="EstadoRol" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-dark" >Atrás</a>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
