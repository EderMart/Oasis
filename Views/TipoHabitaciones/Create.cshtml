@model Oasis.Models.TipoHabitacione

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>

<hr />
<form asp-action="Create">
   <div class="row">
       <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreTipoHab" class="control-label"></label>
                <input asp-for="NombreTipoHab" class="form-control" />
                <span asp-validation-for="NombreTipoHab" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="EstadoTipoHab" class="control-label"></label>
                <select asp-for="EstadoTipoHab" class="form-control">
                    <option selected disabled>  Selecciona  </option>
                    <option>  Habilitada  </option>
                    <option>  Inhabilitada  </option>
                </select>
                <span asp-validation-for="EstadoTipoHab" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="NumPersonas" class="control-label"></label>
                <input asp-for="NumPersonas" class="form-control" />
                <span asp-validation-for="NumPersonas" class="text-danger"></span>
            </div>

            <br />
       </div>
   </div>


    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-dark">Atrás</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
